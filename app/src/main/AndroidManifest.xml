<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.wgu.c196">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".ui.login.LoginActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".CourseReportActivity"
                android:label="@string/title_activity_course_report"
                android:theme="@style/AppTheme.NoActionBar" />
        <activity
                android:name=".AssessmentEditorActivity"
                android:label="@string/title_activity_assessment_editor"
                android:theme="@style/AppTheme.NoActionBar" />
        <activity
                android:name=".CourseEditorActivity"
                android:label="@string/title_activity_course_editor"
                android:theme="@style/AppTheme.NoActionBar" />
        <activity
                android:name=".TermsActivity"
                android:label="@string/title_activity_terms"
                android:theme="@style/AppTheme.NoActionBar" />
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".TermEditorActivity"
                android:label="@string/title_activity_editor"
                android:parentActivityName=".TermsActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.wgu.c196.TermsActivity" />
        </activity>

        <receiver
                android:name=".AlarmReceiver"
                android:exported="false"
                android:resource="@drawable/ic_baseline_access_time" />
    </application>

</manifest>